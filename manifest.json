{
  "manifest_version": 3,
  "name": "豆包下载器",
  "version": "1.0.1",
  "description": "豆包AI生图去水印批量下载!",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "logo.png",
      "48": "logo.png",
      "128": "logo.png"
    }
  },
  "content_scripts": 
	[
		{
			"matches": ["https://www.doubao.com/*"],
			"js": ["doubao-downloader.user.js"],
      "run_at": "document_end",
      "world": "MAIN"
		}
	],
  "permissions": ["activeTab"]
}